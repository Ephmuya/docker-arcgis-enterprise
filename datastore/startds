# Docker command to start ArcGIS Datastore container in detached mode.

MYNAME="datastore"
HOSTNAME=`hostname`

# Stop a previous instance, if any.
docker stop ${MYNAME} > /dev/null 2>&1
docker rm ${MYNAME} > /dev/null 2>&1

echo "Docker is starting in detached mode."
echo "Datastore URL is https://${HOSTNAME}:2443/arcgis/datastore"

docker run -it --rm --name=${MYNAME} --net-alias=${MYNAME}  --net=arcgis-network \
   -p 2443:2443 \
   geoceg/arcgis-datastore bash

echo "${MYNAME} docker removed."
