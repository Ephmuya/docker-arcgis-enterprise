# Docker command to start Web Adaptor container in detached mode.

MYNAME="web-adaptor"
HOSTNAME=`hostname`

# Stop a previous instance, if any.
docker stop ${WA_NAME} > /dev/null 2>&1
docker rm ${WA_NAME} > /dev/null 2>&1

echo "Docker is starting in detached mode."
echo "Web-Adaptor URL set up is https://${HOSTNAME}/arcgis/webadaptor"
echo "Web-Adaptor URL portal is https://${HOSTNAME}/arcgis/home"

docker run -d --name=${MYNAME} --net-alias=${MYNAME} --net=arcgis.net --hostname=${MYNAME} \
   -p 80:80 -p 443:443 \
   geoceg/web-adaptor
